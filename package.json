{
  "name": "serverless-crypto-utils",
  "version": "2.0.0",
  "author": "Giselle Hoekveld Silva",
  "description": "Complete crypto toolkit for serverless & Edge platforms: password hashing, secure access tokens, ID generation. Zero dependencies, Web Crypto API only.",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./password-hashing": {
      "types": "./dist/password-hashing.d.ts",
      "import": "./dist/password-hashing.js",
      "require": "./dist/password-hashing.cjs"
    },
    "./access-token": {
      "types": "./dist/access-token.d.ts",
      "import": "./dist/access-token.js",
      "require": "./dist/access-token.cjs"
    },
    "./id-generation": {
      "types": "./dist/id-generation.d.ts",
      "import": "./dist/id-generation.js",
      "require": "./dist/id-generation.cjs"
    },
    "./encryption": {
      "types": "./dist/encryption.d.ts",
      "import": "./dist/encryption.js",
      "require": "./dist/encryption.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/password-hashing.ts src/access-token.ts src/id-generation.ts src/encryption.ts --dts --format esm,cjs --out-dir dist",
    "prepublishOnly": "npm run build",
    "deploy": "act",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=github-actions",
    "test:coverage": "vitest run --coverage",
    "ci:build": "npm run test:ci && npm run build",
    "ci:publish": "npm run ci:build && npm publish"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gihoekveld/serverless-crypto-utils.git"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "serverless",
    "edge-computing",
    "edge-functions",
    "vercel",
    "deno",
    "web-crypto-api",
    "crypto",
    "cryptography",
    "typescript",
    "zero-dependencies",
    "password-hashing",
    "pbkdf2",
    "hash",
    "hashing",
    "access-token",
    "token",
    "jwt-alternative",
    "aes-gcm",
    "hmac",
    "authentication",
    "authorization",
    "security",
    "uuid",
    "ulid",
    "id-generation",
    "unique-id",
    "hono",
    "fastify",
    "express"
  ],
  "homepage": "https://github.com/gihoekveld/serverless-crypto-utils#readme",
  "bugs": {
    "url": "https://github.com/gihoekveld/serverless-crypto-utils/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@vitest/coverage-v8": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4"
  }
}
